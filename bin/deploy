#!/bin/sh

REMOTE="root@homer.lichess.org"
REMOTE_DIR="/home/lichess-explorer2"

echo "Deploy to server $REMOTE:$REMOTE_DIR"

sbt -Djava.library.path=/usr/local/lib/ ";stage;exit"
if [ $? != 0 ]; then
  echo "Deploy canceled"
  exit 1
fi

# include java JNA
# sed -i 's/^declare\s-r\sapp_classpath=".*/declare -r app_classpath="$lib_dir\/..\/conf:$lib_dir\/*:\/usr\/share\/java\/jna.jar"/' target/universal/stage/bin/lila-search

RSYNC_OPTIONS=" \
  --archive \
  --no-o --no-g \
  --force \
  --delete \
  --progress \
  --compress \
  --checksum \
  --verbose \
  --exclude RUNNING_PID \
  --exclude conf/application.conf \
  --exclude data \
  --exclude '.git/'"

stage="target/universal/stage"
include="bin util $stage/bin $stage/lib $stage/conf"
rsync_command="rsync $RSYNC_OPTIONS $include $REMOTE:$REMOTE_DIR"
echo "$rsync_command"
$rsync_command
echo "rsync complete"

read -n 1 -p "Press [Enter] to continue."

echo "Restart lichess-explorer2"
ssh $REMOTE "chown -R lichess-explorer:lichess-explorer $REMOTE_DIR && systemctl restart lichess-explorer2"

echo "Deploy complete"
